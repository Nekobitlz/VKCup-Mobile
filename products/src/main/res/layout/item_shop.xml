<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.nekobitlz.products.features.shops.custom.CircleImageView
        android:id="@+id/iv_shop_avatar"
        android:layout_width="@dimen/circle_image_size_48"
        android:layout_height="@dimen/circle_image_size_48"
        android:layout_marginStart="@dimen/spacing_large_16"
        app:cv_borderColor="@android:color/transparent"
        app:cv_borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_shop_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/testimage" />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal_12"
        android:layout_marginTop="@dimen/spacing_normal_12"
        android:layout_marginEnd="@dimen/spacing_large_16"
        android:maxLines="1"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/font_normal_16"
        app:layout_constraintBottom_toTopOf="@id/tv_shop_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_shop_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Adidas" />

    <TextView
        android:id="@+id/tv_shop_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal_12"
        android:maxLines="1"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/font_small_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_shop_name"
        app:layout_constraintStart_toStartOf="@id/tv_shop_name"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_name"
        tools:text="Open group" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_normal_12">

    <com.nekobitlz.unsubscribe.features.custom.CircleImageView
        android:id="@+id/iv_group_image"
        android:layout_width="@dimen/group_image_size_101"
        android:layout_height="@dimen/group_image_size_101"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/spacing_small_8"
        android:background="@drawable/circle_group"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/tv_group_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/testimage" />

    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_circle_28"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_group_image"
        app:layout_constraintEnd_toEndOf="@id/iv_group_image"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/iv_group_image"
        app:layout_constraintTop_toTopOf="@id/iv_group_image"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small_8"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/font_small_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_group_image"
        app:layout_constraintStart_toStartOf="@id/iv_group_image"
        app:layout_constraintTop_toBottomOf="@id/tv_group_name"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Совхоз имени Ленина" />

</androidx.constraintlayout.widget.ConstraintLayout>